{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "inlineSourceMap": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true,
    "types": ["node"],
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}
