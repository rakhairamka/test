// BEGIN: Header
header.m-grid__item.m-header(data-minimize-mobile='hide', data-minimize-offset='200', data-minimize-mobile-offset='200', appunwraptag='')
  .m-container.m-container--fluid.m-container--full-height
    .m-stack.m-stack--ver.m-stack--desktop
      // BEGIN: Brand
      .m-stack__item.m-brand.m-brand--skin-dark
        .m-stack.m-stack--ver.m-stack--general
          .m-stack__item.m-stack__item--middle.m-brand__logo
            a.m-brand__logo-wrapper(routerLink='/dashboard') License Portal
          .m-stack__item.m-stack__item--middle.m-brand__tools
            // BEGIN: Left Aside Minimize Toggle
            a#m_aside_left_minimize_toggle.m-brand__icon.m-brand__toggler.m-brand__toggler--left.m--visible-desktop-inline-block(href='javascript:;')
              span
            // END
            // BEGIN: Responsive Aside Left Menu Toggler
            a#m_aside_left_offcanvas_toggle.m-brand__icon.m-brand__toggler.m-brand__toggler--left.m--visible-tablet-and-mobile-inline-block(href='javascript:;')
              span
            // END
            // BEGIN: Responsive Header Menu Toggler
            a#m_aside_header_menu_mobile_toggle.m-brand__icon.m-brand__toggler.m--visible-tablet-and-mobile-inline-block(href='javascript:;')
              span
            // END
            // BEGIN: Topbar Toggler
            a#m_aside_header_topbar_mobile_toggle.m-brand__icon.m--visible-tablet-and-mobile-inline-block(href='javascript:;')
              i.flaticon-more
            // BEGIN: Topbar Toggler
      // END: Brand
      #m_header_nav.m-stack__item.m-stack__item--fluid.m-header-head
        
        // BEGIN: Topbar
        #m_header_topbar.m-topbar.m-stack.m-stack--ver.m-stack--general
          .m-stack__item.m-topbar__nav-wrapper
            ul.m-topbar__nav.m-nav.m-nav--inline
              li.m-nav__separator.m-nav__separator--fit
                a.btn.m-btn--pill.btn-secondary.m-btn.m-btn--custom.m-btn--label-brand.m-btn--bolder(routerLink='/login') Logout
              //BEGIN: Profile
              li.m-nav__item.m-topbar__user-profile.m-topbar__user-profile--img.m-dropdown.m-dropdown--medium.m-dropdown--arrow.m-dropdown--header-bg-fill.m-dropdown--align-right.m-dropdown--mobile-full-width.m-dropdown--skin-light(data-dropdown-toggle='click')
                a.m-nav__link.m-dropdown__toggle(href='#')
                  span.m-topbar__userpic
                    img.m--img-rounded.m--marginless.m--img-centered(src='', alt='')
                  span.m-topbar__username.m--hide Nick
                .m-dropdown__wrapper
                  span.m-dropdown__arrow.m-dropdown__arrow--right.m-dropdown__arrow--adjust
                  .m-dropdown__inner
                    .m-dropdown__header.m--align-center(style='background: url(img/user_profile_bg.jpg); background-size: cover;')
                      .m-card-user.m-card-user--skin-dark
                        .m-card-user__pic
                          img.m--img-rounded.m--marginless(src='img/deloitte_logo.png', alt='')
                        .m-card-user__details
                          span.m-card-user__name.m--font-weight-500 Mark Andre
                          a.m-card-user__email.m--font-weight-300.m-link(href='') mark.andre@gmail.com
                    .m-dropdown__body
                      .m-dropdown__content
                        ul.m-nav.m-nav--skin-light
                          li.m-nav__section.m--hide
                            span.m-nav__section-text Section
                          li.m-nav__separator.m-nav__separator--fit
                          li.m-nav__item
                            a.btn.m-btn--pill.btn-secondary.m-btn.m-btn--custom.m-btn--label-brand.m-btn--bolder(routerLink='/login') Logout
              // END: Profile
        // END: Topbar
// END: Header
